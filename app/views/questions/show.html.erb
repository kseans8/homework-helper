<div class="page" id=<%= @question.id.to_s %>>
  <div class="main-bar">
    <div id="answers-list"></div>

    <div class="question-links">
      <div class="answer-question">
        <%= form_for [@question, Answer.new] do |f| %>
          <div>
            <%= f.label :answer, "Your Answer" %>
          </div>
          <div>
            <%= f.text_area :answer, cols: 100, rows: 10 %>
          </div>
          <div>
            <%= f.submit "Submit Answer"%>
          </div>
        <% end %>
      </div>
      <div id="edit-question">
        <%= button_to 'Edit question', edit_question_path , method: 'get'%>
      </div>
      <div id="delete-question">
        <%= button_to 'Delete question', @question, method: :delete, data: { confirm: "Are you sure you want to delete this question? This question and all of its answers will be destroyed and will be unable to be recovered. Confirm?" } %>
      </div>
      <div id="back-to-questions">
        <%= button_to 'Back to questions', questions_path, method: 'get' %>
      </div>
    </div>
  </div>
  <div class="advertisement">
      <p>once this blows up, i'll charge chegg like $0.005 per ad and I'll be rich</p>
  </div>
</div>
