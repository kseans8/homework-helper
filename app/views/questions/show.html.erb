<div class="question-show-page">
  <div class="main-bar">
    <div class="question-title">
      <%= @question.title %>
    </div>

    <div class="question">
      <div class="question-votes">
        Votes will go here
      </div>

      <div class="question-details">
        <div class="question-description">
          <% if @question.description.empty? %>
            <p>No description provided</p>
          <% else %>
            <p><%= @question.description %></p>
          <% end %>
        </div>
        <div class="question-stats">
          <div class="question-asker">
            username will go here
          </div>

          <div class="question-timing">
            asked <%= @question.created_at.strftime("%H:%M %d %b. %Y") %>
          </div>
        </div>
      </div>

    </div>

    <div class="answers">
      <% if @answers.empty? %>
        <div class="no-answers">
          <p>No answers for this question yet. Think you can answer it?</p>
        </div>
      <% else %>
      <div class="answer-count">
        <% if @answers.length == 1  %>
          <%= @answers.length %> Answer
        <% else %>
          <%= @answers.length %> Answers
        <% end %>
      </div>
        <% @answers.each do |answer| %>
          <div class="answer">
            <div class="answer-votes">
              votes will go here
            </div>
            <div class="answer-details">
              <div class="answer-description">
                <p><%= answer.answer %></p>
              </div>
              <div class="answer-stats">
                <div class="answerer">
                  username will go here
                </div>
                <div class="answer-timing">
                  answered <%= answer.created_at.strftime("%H:%M %b. %d, %Y") %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>

    <div class="question-links">
      <div class="answer-question">
        <%= form_for [@question, Answer.new] do |f| %>
          <div>
            <%= f.label :answer, "Your Answer" %>
          </div>
          <div>
            <%= f.text_area :answer, cols: 100, rows: 10 %>
          </div>
          <div>
            <%= f.submit "Submit Answer"%>
          </div>
        <% end %>
      </div>
      <div id="edit-question">
        <%= button_to 'Edit question', edit_question_path , method: 'get'%>
      </div>
      <div id="delete-question">
        <%= button_to 'Delete question', @question, method: :delete, data: { confirm: "Are you sure you want to delete this question? This question and all of its answers will be destroyed and will be unable to be recovered. Confirm?" } %>
      </div>
      <div id="back-to-questions">
        <%= button_to 'Back to questions', questions_path, method: 'get' %>
      </div>
    </div>
  </div>
  <div class="advertisement">
      <p>once this blows up, i'll charge chegg like $0.005 per ad and I'll be rich</p>
  </div>
</div>
